package Logica;

import java.awt.Point;
import java.util.Random;

import javax.swing.ImageIcon;
import javax.swing.JLabel;

import GUI.G;
import Objetos.GameObject;
import PU.Casco;
import PU.Estrella;
import PU.Granada;
import PU.PowerUp;
import Visitores.*;

public class HiloPowerUp implements Runnable{
	private Mapa m;
	private G g;
	
	public HiloPowerUp(Mapa mapa, G gui){
		m= mapa;
		g= gui;
		
	}
	
	public void run(){
		
		Random r=new Random();
		Random x=new Random();
		Random y=new Random();
		int d, dx, dy, pu;
		int count=0;
		PowerUp power;
		while(true){
			d=r.nextInt(2);
			if(d==1){
				dx=r.nextInt(14);
				dy=r.nextInt(14);
				//pu=r.nextInt(6);
				/*switch(pu){
				case 0: 
					power= new Granada(new Point(dx*64,dy*64));
					break;
				case 1:
					power= new Casco(new Point(dx*64,dy*64));
					break;
				case 2:
					power= new Pala(new Point(dx*64,dy*64));
					break;
				case 3:
					power= new Estrella(new Point(dx*64,dy*64));
					break;
				case 4:
					power= new Tanque(new Point(dx*64,dy*64));
					break;
				case 5:
					power= new Timer(new Point(dx*64,dy*64));
					break;
				}*/
				power= new Casco(new Point(dx*64,dy*64));
				g.add(power.getGrafico());
				g.setComponentZOrder(power.getGrafico(), 0);
				while(count<30){
					count++;
					try {
						Thread.sleep(1000);
					} catch (InterruptedException e) {
						e.printStackTrace();
					}
				}
				count=0;
				g.remove(power.getGrafico());
			}
			
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			

		}
	}
}
